# ============================================
# CONFIGURAZIONE AMBIENTE - CATALOG APPLICATION
# ============================================
# Copia questo file in .env e inserisci i tuoi valori reali
# NON committare mai il file .env su Git!

# Django Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite default - modifica per PostgreSQL/MySQL)
DATABASE_NAME=db.sqlite3

# CORS Settings (sviluppo permissivo, produzione restrittivo)
CORS_ALLOW_ALL_ORIGINS=True
# In produzione usa invece:
# CORS_ALLOWED_ORIGINS=https://tuofrontend.com,https://www.tuofrontend.com

# JWT Settings (durata token)
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_DAYS=7

# Media Files
MEDIA_ROOT=media
MEDIA_URL=/media/

# Filer Settings
FILER_ENABLE_PERMISSIONS=True
FILER_CANONICAL_URL=filer/
